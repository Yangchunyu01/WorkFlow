    function ShowJsonMessage(json) {

        var staticValue = true;
        var styleValue = "warning";
        var sizeValue = "medium";

        var titleValue = "Warning";
        var messageValue = "Return Message Is None, Please Check.";
        if (json != null) {

            staticValue = false;
            styleValue = "notice";
            titleValue = "Successful";

            if (!json.Success) {
                staticValue = true;
                styleValue = "error";
                sizeValue = "large";
                titleValue = "Error"
            }

            messageValue = json.Message;

        }

        $.growl({ title: titleValue, message: messageValue, static: staticValue, style: styleValue, size: sizeValue });
    }
