@using (Ajax.BeginForm("SaveUserInfo", new { controller = "Home" }, new AjaxOptions { HttpMethod = "Post", OnBegin = "CreateUserInfoBegin", OnSuccess = "CreateUserInfoSuccess" }))
{
    <div class="modal fade" id="userModal" tabindex="-1" role="dialog"
         aria-labelledby="userLabel" aria-hidden="true">
        <div class="modal-dialog" data-step="1" data-intro="Please Complete your information" data-position='right'>
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"
                            aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" id="userLabel">
                        Please select your preferred info
                    </h4>
                </div>
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <label class="control-label" style="width:120px">User Name:</label>
                            </span>
                            <input id="username" name="username" type="text" class="form-control" value="" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <label class="control-label" style="width:120px">User Role:</label>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default"
                            data-dismiss="modal">
                        Close
                    </button>
                    <input id="btn-createuserinfo" type="submit" class="btn btn-success" value="Submit" />
                </div>
            </div>
        </div>
    </div>
}
